{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": false,
    "removeComments": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "outDir": "build",
    "lib": ["es6", "es7", "ESNext", "dom"],
    "baseUrl": "src",
    "paths": {
      "app/*": ["./app/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["dist", "node_modules", "config"]
}
